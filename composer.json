{
  "name": "ifocus-sk/ifocus.sk-link-nest-wordpress-plugin-light",
  "version": "1.0.1",
  "description": "Plugin allows the site owner to automate linking selected keywords in the site content.",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Martin Krcho",
      "email": "martin.krcho@devstudio.sk",
      "homepage": "https://www.linkedin.com/in/martinkrcho/"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "php": "^5.6.20 || ^7.0 || ^8.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "10up/phpcs-composer": "dev-master",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "check-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs ."
    ],
    "fix-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf ."
    ],
    "test": [
      "@php ./vendor/phpunit/phpunit/phpunit"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
